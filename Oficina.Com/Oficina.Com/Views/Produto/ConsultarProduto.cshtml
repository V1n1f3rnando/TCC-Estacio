@model IEnumerable<Oficina.Com.Models.ProdutoViewModel>
@{
    ViewBag.Title = "ConsultarProduto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ConsultarProduto</h2>

<div class="alert-messages text-center">
</div>
<br />
<a href="" onclick="PreencheFornecedor()" data-toggle="modal" data-target="#modalcreateProduto">
    <span class="mdi mdi-account btn btn-success"> Novo Produto</span>
</a>
<hr />
<div class="col-md-12">

    <table class="table table-striped table-bordered" cellspacing="0" id="tbconsulta" style="width:100%">
        <thead>
            <tr>
                <th>Codigo</th>
                <th>Nome</th>
                <th>Valor Unitario</th>
                <th>Quantidade</th>
                <th>Operações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Nome</td>
                    <td>@item.ValorUnitario</td>
                    <td>@item.Quantidade</td>
                    <td>
                        <a href="#" class="mdi mdi-pencil btn btn-success" onclick="CarregaCampos(@item.Id)" style="width:auto" data-toggle="modal" data-target="#modaleditProduto">Editar</a>
                        <a href="#" class="mdi mdi-note  btn btn-success" data-toggle="modal" data-target="#modaldetalhesProduto">Detalhes</a>
                        <a href="#" class="mdi mdi-delete btn btn-danger" onclick="" data-toggle="modal" data-target="#modaldeleteProduto"></a>
                    </td>
                </tr>

            }

        </tbody>
        <tfoot>
            @*<tr>
                    <td colspan="5">Quantidade de clientes: @Model.Count() </td>
                </tr>*@
        </tfoot>
    </table>
</div>

<!--Modal Create-->
<div class="modal fade" id="modalcreateProduto" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog " role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title" id="exampleModalLabel">Cadastro de Produto</h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-horizontal col-md-12">
                    <div class="row" style="align-self:center">
                        <div class="form-group col-md-12">
                            <label>Nome:</label>
                            <input type="text" id="txtnome" class="form-control" />
                        </div>

                        <div class="form-group col-md-12">
                            <label>Imagem:</label>
                            <input type="file" id="txtimagem" class="form-control fileinput" />
                        </div>

                        <div class="form-group col-md-12">
                            <label>Fornecedor:</label>
                            <select id="txtfornecedor" class="form-control">
                            </select>
                        </div>

                        <div class="form-group col-md-6">
                            <label>Valor Unitario:</label>
                            <input type="text" id="txtvalor" class="form-control" />
                        </div>

                        <div class="form-group col-md-6">
                            <label>Quantidade:</label>
                            <input type="number" id="txtquantidade" class="form-control" />
                        </div>

                        <br />
                        <div class="form-group col-md-12">

                        </div>

                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-success mdi mdi-floppy" style="margin-right:25%; width:50%" onclick="Cadastrar()" id="btncadastro">
                    Cadastrar Ordem de Serviço
                </button>
            </div>
        </div>
    </div>
</div>
<!--Modal edição-->
<div class="modal fade" id="modaleditProduto" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title" id="edicao">Edição do Produto </h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <div class="row">
                    <input type="hidden" id="txtidedicao" class="form-control" />
                    <div class="form-group col-md-4">
                        <label>Código:</label>
                        <input type="text" id="txteditcodigo" class="form-control" />
                    </div>

                    <div class="form-group col-md-8">
                        <label>Nome:</label>
                        <input type="text" id="txteditnome" class="form-control" />
                    </div>

                    <div class="form-group col-md-12">
                        <label>Imagem:</label>
                        <input type="file" id="txteditimagem" class="form-control fileinput" />
                    </div>

                    <div class="form-group col-md-12">
                        <label>Fornecedor:</label>
                        <input type="text" id="txtfornecedor" class="form-control" />
                    </div>

                    <div class="form-group col-md-6">
                        <label>Quantidade:</label>
                        <input type="number" id="txteditquantidade" class="form-control" />
                    </div>

                    <div class="form-group col-md-6">
                        <label>Valor Unitario:</label>
                        <input type="text" id="txteditvalor" class="form-control" />
                    </div>

                    <br />
                    <div class="form-group col-md-12">

                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-success mdi mdi-update" style="margin-right:25%; width:50%" onclick="Editar()" id="btncadastro">
                    Atualizar Produto
                </button>
            </div>
        </div>
    </div>
</div>
<!--Modal detalhe-->
<div class="modal fade" id="modaldetalhesProduto" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title" id="edicao">Detalhe do Produto</h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="form-group col-md-4">
                        <label>Codigo:</label>
                        <input type="text" id="txtdtcodigo" class="form-control" readonly />
                    </div>

                    <div class="form-group col-md-8">
                        <label>Nome:</label>
                        <input type="text" id="txtmotivo" class="form-control" readonly />
                    </div>

                    <div class="form-group col-md-12">
                        <label>Fornecedor:</label>
                        <input type="text" id="txtplaca" class="form-control" readonly />
                    </div>

                    <div class="form-group col-md-6">
                        <label>Quantidade:</label>
                        <input type="text" id="txtstatus" class="form-control" readonly />
                    </div>

                    <div class="form-group col-md-6">
                        <label>Valor Unitario:</label>
                        <input type="text" id="txtdataabertura" class="form-control" readonly />
                    </div>

                    <div class="form-group col-md-12">

                    </div>

                </div>
            </div>
            <div class="modal-footer">

            </div>
        </div>
    </div>
</div>
<!--Modal Delete-->
<div class="modal fade" id="modaldeleteProduto" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title" id="delete">Deseja realmente excluir este Produto?</h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <input type="hidden" class="form-control hidde" id="txtid" />
                <p style="color:orangered;text-align:center"> Aviso: Com esta ação os dados do Produto em questão serão excluidos permanentemente!</p>
            </div>
            <div class="modal-footer">
                <button class="btn btn-danger mdi mdi-delete" style="margin-right:25%; width:50%" onclick="Delete()">Excluir Produto</button>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script type="text/javascript">
        $(document).ready(function () {

            $("#tbconsulta").DataTable({
                responsive: true,
                "paging": false,
                "language": {
                    "lengthMenu": "",
                    "search": "Procurar",
                    "info": "Mostrando página _PAGE_  de _PAGE_ ",
                    "zeroRecords": "Nenhum registro encontrado !",
                    "infoFiltered": "",
                    "info": "",
                    "infoEmpty": "",
                    "paginate": {
                        "first": "Primeiro",
                        "last": "Ultimo",
                        "next": "Próximo",
                        "previous": "Anterior"
                    }
                }
            });

            $("#btncadastro").click(function () {

                showAndDismissAlert('danger', 'Erro !!!');

            });
        })
        function CarregaCampos(id) {
            PreencheFornecedor();
            PreencheEdit(id);

        }
        function Cadastrar() {
            model = {
                Id: null,
                Nome: $("#txtnome").val(),
                CnpjFornecedor: $("#txtfornecedor").val(),
                FornecedorId: null,
                ValorUnitario: $("#txtvalor").val(),
                Quantidade: $("#txtquantidade").val(),
                Imagem: $("#txtimagem").val()
            }

            $.ajax({
                type: "POST",
                url: "/Produto/Cadastrar",
                data: model,
                success: function () {
                    window.location.reload()
                },
                error: function (e) {

                    $("#mensagem").html("Erro: " + e.status);
                }
            });
        }
        function PreencheFornecedor() {
            $.ajax({
                type: "POST",
                url: "/Fornecedor/RetornaFornecedores",
                data: null,
                success: function (data) {
                    $("#txtfornecedor option").remove();
                    data.forEach(function (item) {
                        $("#txtfornecedor").append('<option value="' + item[1] + '">' + item[0] + '</option>');
                    });
                },
                error: function (e) {

                }
            });
        }
        function PreencheEdit(id) {
            $.ajax({
                type: "POST",
                url: "/Produto/Edit",
                data: "id="+id,
                success: function (data) {
                    $("#txteditcodigo").val(data.Id);
                    $("#txteditnome").val(data.Nome);
                    $("#txteditimagem").val(data.Imagem);
                    $("#txtfornecedor").val(data.C);
                    $("#txteditquantidade").val(data.Quantidade);
                    $("#txteditvalor").val(data.ValorUnitario);
                },
                error: function (e) {

                    $("#mensagem").html("Erro: " + e.status);
                }
            });
        }
    </script>
}