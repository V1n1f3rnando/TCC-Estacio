@model IEnumerable<Oficina.Com.Models.ClienteViewModel>

@{
    ViewBag.Title = "Consulta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Consulta</h2>

<div>
    @ViewBag.Mensagem
</div>
<table class="table table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>Telefone</th>
            <th>Email</th>
            <th>Data de Nascimento</th>
            <th>Operações</th>
        </tr>
    </thead>
    <tbody>
        <!-- Percorrer o conteudo da lista.. -->
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Nome</td>
                <td>@item.Telefone</td>
                <td>@item.Email</td>
                <td>@string.Format("{0:dd/MM/yyyy}", item.DataNascimento)</td>
                <td><input type="submit" class="btn-primary" value="Adicionar" /></td>
            </tr>
        }
    </tbody>
    <tfoot>
        <br />
        <tr>
            <td colspan="5">Quantidade de clientes: @Model.Count() </td>
        </tr>
    </tfoot>
</table>

