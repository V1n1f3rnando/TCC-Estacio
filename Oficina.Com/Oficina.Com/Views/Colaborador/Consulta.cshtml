@model IEnumerable<Oficina.Com.Models.ColaboradorViewModel>
@{
    ViewBag.Title = "Consulta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Consultar Colaborador</h2>

<div class="alert-messages text-center">
</div>
<br />
<a href="" onclick="PreencheFornecedor()" data-toggle="modal" data-target="#modalcreate">
    <span class="mdi mdi-account btn btn-success"> Novo Colaborador</span>
</a>
<hr />
<div class="col-md-12">

    <table class="table table-striped table-bordered" cellspacing="0" id="tbconsulta" style="width:100%">
        <thead>
            <tr>
                <th>Codigo</th>
                <th>Nome</th>
                <th>Cargo</th>,
                <th>Email</th>
                <th>Operações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Nome</td>
                    <td>@item.Cargo</td>
                    <td>@item.Email</td>
                    <td>
                        <a href="#" class="mdi mdi-pencil btn btn-success" onclick="CarregaCampos(@item.Id)" style="width:auto" data-toggle="modal" data-target="#modaleditProduto">Editar</a>
                        <a href="#" class="mdi mdi-note  btn btn-success" onclick="Detalhe(@item.Id)" data-toggle="modal" data-target="#modaldetalhesProduto">Detalhes</a>
                        <a href="#" class="mdi mdi-delete btn btn-danger" onclick="PreencheIdExclusao(@item.Id)" data-toggle="modal" data-target="#modaldeleteProduto"></a>
                    </td>
                </tr>

            }

        </tbody>
        <tfoot>
            @*<tr>
                    <td colspan="5">Quantidade de clientes: @Model.Count() </td>
                </tr>*@
        </tfoot>
    </table>
</div>
<!--Modal Create-->
<div class="modal fade" id="modalcreate" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title" id="exampleModalLabel">Cadastro de Colaborador</h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-horizontal col-md-12">
                    <div class="row" style="align-self:center">
                        <div class="form-group col-md-6">
                            <label>Nome:</label>
                            <input type="text" id="txtnome" class="form-control" />
                        </div>

                        <div class="form-group col-md-6">
                            <label>Cpf:</label>
                            <input type="text" id="txtcpf" class="form-control" />
                        </div>


                        <div class="form-group col-md-3">
                            <label>Estado Civíl::</label>
                            <input type="text" id="txtestadocivil" class="form-control" />
                        </div>

                        <div class="form-group col-md-6">
                            <label>Email::</label>
                            <input type="text" id="txtemail" class="form-control" />
                        </div>

                        <div class="form-group col-md-3">
                            <label>Telefone:</label>
                            <input type="text" id="txttelefone" class="form-control" />
                        </div>

                        <div class="form-group col-md-4">
                            <label>Data Nasicmento:</label>
                            <input type="date" id="txtdatanascimento" class="form-control" />
                        </div>

                        <div class="form-group col-md-4">
                            <label>Cargo:</label>
                            <input type="text" id="txtcargo" class="form-control" />
                        </div>

                        <div class="form-group col-md-4">
                            <label>Salário:</label>
                            <input type="number" id="txtsalario" class="form-control" />
                        </div>

                        <div class="form-group col-md-6">
                            <label>Rua:</label>
                            <input type="text" id="txtrua" class="form-control" />
                        </div>

                        <div class="form-group col-md-2">
                            <label>Nº:</label>
                            <input type="text" id="txtnumero" class="form-control" />
                        </div>

                        <div class="form-group col-md-4">
                            <label>Bairro:</label>
                            <input type="text" id="txtbairro" class="form-control" />
                        </div>

                        <div class="form-group col-md-6">
                            <label>Complemento:</label>
                            <input type="text" id="txtcomplemento" class="form-control" />
                        </div>

                        <div class="form-group col-md-3">
                            <label>UF:</label>
                            <input type="text" id="txtuf" class="form-control" />
                        </div>

                        <div class="form-group col-md-3">
                            <label>Cep:</label>
                            <input type="text" id="txtcep" class="form-control" />
                        </div>
                        <br />
                        <div class="form-group col-md-12">

                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-success mdi mdi-floppy" style="margin-right:25%; width:50%" onclick="Cadastrar()" id="btncadastro">
                    Cadastrar Colaborador
                </button>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script type="text/javascript">

        $(document).ready(function () {

            $("#tbconsulta").DataTable({
                responsive: true,
                "paging": false,
                "language": {
                    "lengthMenu": "",
                    "search": "Procurar",
                    "info": "Mostrando página _PAGE_  de _PAGE_ ",
                    "zeroRecords": "Nenhum registro encontrado !",
                    "infoFiltered": "",
                    "info": "",
                    "infoEmpty": "",
                    "paginate": {
                        "first": "Primeiro",
                        "last": "Ultimo",
                        "next": "Próximo",
                        "previous": "Anterior"
                    }
                }
            });

        })

        function Cadastrar() {

            var Endereco = {
                Id: null,
                Rua: $("#txtrua").val(),
                Numero: $("#txtnumero").val(),
                Bairro: $("#txtbairro").val(),
                Complemento: $("#txtcomplemento").val(),
                Uf: $("#txtuf").val(),
                Cep: $("#txtcep").val()
            }

            var model = {
                Id: null,
                Nome: $("#txtnome").val(),
                Cpf: $("#txtcpf").val(),
                EstadoCivil: $("#txtestadocivil").val(),
                Email: $("#txtemail").val(),
                Telefone: $("#txttelefone").val(),
                DataNascimento: $("#txtdatanascimento").val(),
                Cargo: $("#txtcargo").val(),
                Salario: $("#txtsalario").val(),
                Endereco: {
                    Id: Endereco.Id,
                    Rua: Endereco.Rua,
                    Numero: Endereco.Numero,
                    Bairro: Endereco.Bairro,
                    Complemento: Endereco.Complemento,
                    Uf: Endereco.Uf,
                    Cep: Endereco.Cep
                } // Verificarrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrr
   
            }


            $.ajax({
                type: "POST",
                url: "/Colaborador/Cadastro",
                data:model,
                success: function () {
                    window.location.reload()
                },
                error: function (e) {

                    $("#mensagem").html("Erro: " + e.status);
                }
            });
        }
    </script>
}