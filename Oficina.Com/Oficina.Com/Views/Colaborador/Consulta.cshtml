@section scripts{
    <script type="text/javascript">

        $(document).ready(function () {

            $("#tbconsulta").DataTable({
                responsive: true,
                "paging": false,
                "language": {
                    "lengthMenu": "",
                    "search": "Procurar",
                    "info": "Mostrando página _PAGE_  de _PAGE_ ",
                    "zeroRecords": "Nenhum registro encontrado !",
                    "infoFiltered": "",
                    "info": "",
                    "infoEmpty": "",
                    "paginate": {
                        "first": "Primeiro",
                        "last": "Ultimo",
                        "next": "Próximo",
                        "previous": "Anterior"
                    }
                }
            });

        })
        function Cadastrar() {

            var Endereco = {
                Id: null,
                Rua: $("#txtrua").val(),
                Numero: $("#txtnumero").val(),
                Bairro: $("#txtbairro").val(),
                Complemento: $("#txtcomplemento").val(),
                Uf: $("#txtuf").val(),
                Cep: $("#txtcep").val()
            }
            var model = {
                Id: null,
                Nome: $("#txtnome").val(),
                Cpf: $("#txtcpf").val(),
                EstadoCivil: $("#txtestadocivil").val(),
                Email: $("#txtemail").val(),
                Telefone: $("#txttelefone").val(),
                DataNascimento: $("#txtdatanascimento").val(),
                Cargo: $("#txtcargo").val(),
                Salario: $("#txtsalario").val(),
                Endereco: {
                    Id: Endereco.Id,
                    Rua: Endereco.Rua,
                    Numero: Endereco.Numero,
                    Bairro: Endereco.Bairro,
                    Complemento: Endereco.Complemento,
                    Uf: Endereco.Uf,
                    Cep: Endereco.Cep
                } // Verificarrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrr

            }

            $.ajax({
                type: "POST",
                url: "/Colaborador/Cadastro",
                data: model,
                success: function () {
                    window.location.reload()
                },
                error: function (e) {

                    $("#mensagem").html("Erro: " + e.status);
                }
            });
        }
        function PreencheEdit(id) {

            $.ajax({
                type: "POST",
                url: "/Colaborador/Editar",
                data: "id=" + id,
                success: function (data) {

                    $("#txtidedicao").val(id);
                    $("#txteditnome").val(data.Nome);
                    $("#txteditcpf").val(data.Cpf);
                    $("#txteditestadocivil").val(data.EstadoCivil);
                    $("#txteditemail").val(data.Email);
                    $("#txtedittelefone").val(data.Telefone);
                    $("#txteditdatanascimento").val(data.DataNascimento);
                    $("#txteditcargo").val(data.Cargo);
                    $("#txteditsalario").val(data.Salario);
                    $("#txteditrua").val(data.Endereco.Rua);
                    $("#txteditnumero").val(data.Endereco.Numero);
                    $("#txteditbairro").val(data.Endereco.Bairro);
                    $("#txteditcomplemento").val(data.Endereco.Complemento);
                    $("#txtedituf").val(data.Endereco.UF);
                    $("#txteditcep").val(data.Endereco.Cep);
                },
                error: function (e) {

                    $("#mensagem").html("Erro: " + e.status);
                }
            });
        }
        function Edit() {

            var modelEdit = {

                Id: $("#txtidedicao").val(),
                Nome: $("#txteditnome").val(),
                Cpf: $("#txteditcpf").val(),
                EstadoCivil: $("#txteditestadocivil").val(),
                Email: $("#txteditemail").val(),
                Telefone: $("#txtedittelefone").val(),
                DataNascimento: $("#txteditdatanascimento").val(),
                Cargo: $("#txteditcargo").val(),
                Salario: $("#txteditsalario").val(),
                Endereco: {
                    Id: null,
                    Rua: $("#txteditrua").val(),
                    Numero: $("#txteditnumero").val(),
                    Bairro: $("#txteditbairro").val(),
                    Complemento: $("#txteditcomplemento").val(),
                    UF: $("#txtedituf").val(),
                    Cep: $("#txteditcep").val()
                }
            };

            $.ajax({
                type: "POST",
                url: "/Colaborador/Edit",
                data: modelEdit,
                success: function () {
                    window.location.reload()
                }, error: function () {

                }
            });
        }
        function PreencheDetalhe(id) {
            $.ajax({
                type: "POST",
                url: "/Colaborador/Editar",
                data: "id=" + id,
                success: function (data) {

                    $("#txtdtnome").val(data.Nome);
                    $("#txtdtcpf").val(data.Cpf);
                    $("#txtdtestadocivil").val(data.EstadoCivil);
                    $("#txtdtemail").val(data.Email);
                    $("#txtdttelefone").val(data.Telefone);
                    $("#txtdtdatanascimento").val(data.DataNascimento);
                    $("#txtdtcargo").val(data.Cargo);
                    $("#txtdtsalario").val(data.Salario);
                    $("#txtdtrua").val(data.Endereco.Rua);
                    $("#txtdtnumero").val(data.Endereco.Numero);
                    $("#txtdtbairro").val(data.Endereco.Bairro);
                    $("#txtdtcomplemento").val(data.Endereco.Complemento);
                    $("#txtdtuf").val(data.Endereco.UF);
                    $("#txtdtcep").val(data.Endereco.Cep);
                },
                error: function (e) {

                    $("#mensagem").html("Erro: " + e.status);
                }
            });
        }
        function PreencheIdExclusao(id) {
            $("#txtid").val(id);
        }
        function Excluir() {
            var id = $("#txtid").val();

            $.ajax({
                type: "POST",
                url: "/Colaborador/Excluir",
                data: "id=" + id,
                success: function () {
                    window.location.reload()
                },
                error: function (e) {

                    $("#mensagem").html("Erro: " + e.status);
                }
            });
        }


    </script>
}
